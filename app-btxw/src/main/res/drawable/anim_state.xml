<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="150" android:propertyName="scaleX" android:valueTo="0.8" />
            <objectAnimator android:duration="150" android:propertyName="scaleY" android:valueTo="0.8" />
            <objectAnimator android:duration="150" android:propertyName="fromXScale" android:valueTo="1" />
            <objectAnimator android:duration="150" android:propertyName="fromYScale" android:valueTo="1" />
        </set>
    </item>

    <item>
        <set>
            <objectAnimator android:duration="150" android:propertyName="scaleX" android:valueTo="1.0" />
            <objectAnimator android:duration="150" android:propertyName="scaleY" android:valueTo="1.0" />
            <objectAnimator android:duration="150" android:propertyName="fromXScale" android:valueTo="1" />
            <objectAnimator android:duration="150" android:propertyName="fromYScale" android:valueTo="1" />
        </set>
    </item>

</selector>

